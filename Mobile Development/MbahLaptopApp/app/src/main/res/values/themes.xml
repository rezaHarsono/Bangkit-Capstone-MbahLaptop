<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MbahLaptop" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="fontFamily">@font/lato</item>
        <item name="colorPrimary">@color/light_blue</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

    <style name="CustomBottomNavTextAppearanceActive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item> <!-- Customize text size -->
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomBottomNavTextAppearanceInactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item> <!-- Customize text size -->
    </style>

    <style name="Theme.MbahLaptop" parent="Base.Theme.MbahLaptop" />
</resources>